# Docker Environment Configuration
# Copy to .env for use with docker-compose

# ======================
# OpenAI Configuration
# ======================
OPENAI_API_KEY=your-api-key-here
OPENAI_BASE_URL=
OPENAI_MODEL=gpt-4
OPENAI_PROXY=

# ======================
# LLM Provider
# ======================
LLM_PROVIDER=openai
EMBEDDINGS_PROVIDER=

# ======================
# Neo4j Configuration
# ======================
NEO4J_PASSWORD=graphrag_password

# ======================
# Frontend API Configuration
# ======================
# Enable proxy mode (recommended for Docker)
NEXT_PUBLIC_USE_PROXY=true
BACKEND_URL=http://backend:8000

# Alternative: Direct API URL (use if proxy disabled)
# NEXT_PUBLIC_API_URL=http://localhost:8000

# ======================
# Feature Flags
# ======================
ENABLE_ENTITY_EXTRACTION=true
ENABLE_QUALITY_SCORING=true
ENABLE_DELETE_OPERATIONS=true
ENABLE_TRUE_STREAMING=true
